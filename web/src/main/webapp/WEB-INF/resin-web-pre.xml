<web-app version="3.0" xmlns="http://java.sun.com/xml/ns/javaee" xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
         xsi:schemaLocation="http://java.sun.com/xml/ns/javaee
	http://java.sun.com/xml/ns/javaee/web-app_3_0.xsd">

    <display-name>CarInsurance Project For SMKJ</display-name>
    <context-param>
        <param-name>webAppRootKey</param-name>
        <param-value>CarInsurance-SMKJ-String-MVC</param-value>
    </context-param>

    <!-- 日志设置 -->
    <context-param>
        <param-name>logbackConfigLocation</param-name>
        <param-value>classpath:logback.xml</param-value>
    </context-param>
    <context-param>
        <param-name>log4jRefreshInterval</param-name>
        <param-value>60000</param-value>
    </context-param>
    <listener>
        <listener-class>ch.qos.logback.ext.spring.web.LogbackConfigListener</listener-class>
    </listener>

    <session-config>
        <session-timeout>30</session-timeout>
    </session-config>

    <servlet-mapping>
        <servlet-name>resin-file</servlet-name>
        <url-pattern>*.css</url-pattern>
    </servlet-mapping>
    <servlet-mapping>
        <servlet-name>resin-file</servlet-name>
        <url-pattern>*.js</url-pattern>
    </servlet-mapping>
    <servlet-mapping>
        <servlet-name>resin-file</servlet-name>
        <url-pattern>*.ico</url-pattern>
    </servlet-mapping>
    <servlet-mapping>
        <servlet-name>resin-file</servlet-name>
        <url-pattern>*.gif</url-pattern>
    </servlet-mapping>
    <servlet-mapping>
        <servlet-name>resin-file</servlet-name>
        <url-pattern>*.png</url-pattern>
    </servlet-mapping>
    <servlet-mapping>
        <servlet-name>resin-file</servlet-name>
        <url-pattern>*.jpg</url-pattern>
    </servlet-mapping>
    <servlet-mapping>
        <servlet-name>resin-file</servlet-name>
        <url-pattern>*.htm</url-pattern>
    </servlet-mapping>
    <servlet-mapping>
        <servlet-name>resin-file</servlet-name>
        <url-pattern>*.html</url-pattern>
    </servlet-mapping>
    <servlet-mapping>
        <servlet-name>resin-file</servlet-name>
        <url-pattern>*.swf</url-pattern>
    </servlet-mapping>

    <!-- 配置 Spring 核心控制器 -->
    <servlet>
        <servlet-name>spring-mvc</servlet-name>
        <servlet-class>org.springframework.web.servlet.DispatcherServlet</servlet-class>
        <init-param>
            <param-name>contextConfigLocation</param-name>
            <param-value>
                classpath*:schema/spring/spring-app-model.xml,
                classpath*:schema/spring/spring-app-mapper.xml,
                classpath*:schema/spring/spring-app-service.xml,
                classpath*:schema/spring/spring-app-controller.xml,
                classpath*:schema/spring/spring-mvc-dispatcher.xml
            </param-value>
        </init-param>
        <load-on-startup>1</load-on-startup>
    </servlet>
    <servlet-mapping>
        <servlet-name>spring-mvc</servlet-name>
        <url-pattern>/</url-pattern>
    </servlet-mapping>

    <!-- 验证码控制器 -->
    <servlet>
        <servlet-name>validate-code-servlet</servlet-name>
        <servlet-class>net.lizhaoweb.spring.mvc.core.servlet.ValidateCodeServlet</servlet-class>
        <init-param>
            <param-name>isRequestReset</param-name>
            <param-value>false</param-value>
        </init-param>
        <init-param>
            <param-name>isRequestResize</param-name>
            <param-value>true</param-value>
        </init-param>
        <init-param>
            <param-name>width</param-name>
            <param-value>95</param-value>
        </init-param>
        <init-param>
            <param-name>height</param-name>
            <param-value>38</param-value>
        </init-param>
        <init-param>
            <param-name>codeCount</param-name>
            <param-value>6</param-value>
        </init-param>
        <init-param>
            <param-name>lineCount</param-name>
            <param-value>13</param-value>
        </init-param>
        <load-on-startup>2</load-on-startup>
    </servlet>
    <servlet-mapping>
        <servlet-name>validate-code-servlet</servlet-name>
        <url-pattern>/validate-code.jpg</url-pattern>
    </servlet-mapping>

    <!-- 项目编码过滤器 -->
    <filter>
        <filter-name>characterEncodingFilter</filter-name>
        <filter-class>org.springframework.web.filter.CharacterEncodingFilter</filter-class>
        <init-param>
            <param-name>encoding</param-name>
            <param-value>UTF-8</param-value>
        </init-param>
    </filter>
    <filter-mapping>
        <filter-name>characterEncodingFilter</filter-name>
        <url-pattern>/*</url-pattern>
    </filter-mapping>

    <jsp-config>
        <taglib>
            <taglib-uri>/WEB-INF/tld/spring.tld</taglib-uri>
            <taglib-location>/WEB-INF/tld/spring.tld</taglib-location>
        </taglib>
        <taglib>
            <taglib-uri>/WEB-INF/tld/spring-form.tld</taglib-uri>
            <taglib-location>/WEB-INF/tld/spring-form.tld</taglib-location>
        </taglib>
        <taglib>
            <taglib-uri>/WEB-INF/tld/func.tld</taglib-uri>
            <taglib-location>/WEB-INF/tld/func.tld</taglib-location>
        </taglib>
        <jsp-property-group>
            <url-pattern>*.jsp</url-pattern>
            <el-ignored>false</el-ignored>
        </jsp-property-group>
    </jsp-config>

    <welcome-file-list>
        <welcome-file></welcome-file>
    </welcome-file-list>
</web-app>
